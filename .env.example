# 开发环境配置
NODE_ENV=development

# 智谱AI GLM API配置 (必需)
# 注册地址: https://open.bigmodel.cn/
GLM_API_KEY=your_glm_api_key_here
# 推荐使用 glm-4.6 思考模型，分析效果更好
GLM_MODEL_NAME=glm-4.6
# 语义聚类使用的 Embedding 模型
GLM_EMBEDDING_MODEL=embedding-3

# 小红书Cookie配置 (使用小红书数据源时需要)
# 登录小红书网页版后从浏览器开发者工具获取
XHS_COOKIE=your_xiaohongshu_cookie_here

# TikHub API 配置 (推荐使用 TikHub 数据源)
# 注册地址: https://api.tikhub.io/
# 获取 API Token 后配置到下方
TIKHUB_API_TOKEN=your_tikhub_api_token_here
# 或者使用 TIKHUB_API_KEY（兼容性别名）
# TIKHUB_API_KEY=your_tikhub_api_token_here

# TikHub API 基础配置
# 使用中国域名（api.tikhub.dev）而非国际域名（api.tikhub.io）
TIKHUB_USE_CHINA_DOMAIN=false
# API 请求超时时间（毫秒）
TIKHUB_TIMEOUT=30000
# 是否启用缓存（24小时缓存可降低成本）
TIKHUB_ENABLE_CACHE=true
# 每分钟最大请求数限制（成本控制）
TIKHUB_MAX_REQUESTS_PER_MINUTE=30
# 成本告警阈值（元）
TIKHUB_COST_ALERT_THRESHOLD=100

# 浏览器配置
# 设置为 true 使用无头模式（服务器环境推荐）
HEADLESS=false

# Python 配置
PYTHONIOENCODING=utf-8

# 日志级别 (info/debug/error)
LOG_LEVEL=info
